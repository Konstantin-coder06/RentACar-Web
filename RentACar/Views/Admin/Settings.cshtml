<!DOCTYPE html>
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Settings - Car Rental Website</title>
   <link rel="stylesheet" href="~/css/settings.css" />
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <h3>CarRent Admin</h3>
            </div>

            <div class="admin-info">
                <div class="admin-avatar">A</div>
                <div class="admin-details">
                    <h4>Admin User</h4>
                    <p>Super Administrator</p>
                </div>
            </div>

            <ul class="nav-menu">
                <li class="nav-item">Dashboard</li>
                <li class="nav-item">Vehicle Management</li>
                <li class="nav-item">Reservations</li>
                <li class="nav-item">Customers</li>
                <li class="nav-item">Reports</li>
                <li class="nav-item active">Settings</li>
                <li class="nav-item">Logout</li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="settings-header">
                <h2 class="settings-title">Admin Settings</h2>
                <button class="save-button">Save Changes</button>
            </div>

            <div class="card-stats">
                <div class="stat-card">
                    <h3>Total Vehicles</h3>
                    <div class="stat-value">48</div>
                </div>
                <div class="stat-card">
                    <h3>Active Rentals</h3>
                    <div class="stat-value">23</div>
                </div>
                <div class="stat-card">
                    <h3>Pending Returns</h3>
                    <div class="stat-value">12</div>
                </div>
                <div class="stat-card">
                    <h3>Revenue (Month)</h3>
                    <div class="stat-value">$24,850</div>
                </div>
            </div>

            <div class="settings-container">
                <div class="settings-tabs">
                    <div class="tab active" data-tab="general">General</div>
                    <div class="tab" data-tab="admin">Admin Account</div>
                    <div class="tab" data-tab="rental">Rental Settings</div>
                    <div class="tab" data-tab="payment">Payment</div>
                    <div class="tab" data-tab="notifications">Notifications</div>
                </div>

                <div class="settings-content">
                    <!-- General Settings Tab -->
                    <div class="settings-section active" id="general-section">
                        <h3>Site Settings</h3>
                        <div class="form-group">
                            <label for="site-name">Website Name</label>
                            <input type="text" id="site-name" value="CarRent - Premium Car Rental Service">
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="contact-email">Contact Email</label>
                                <input type="email" id="contact-email" value="contact@carrent.example">
                            </div>
                            <div class="form-group">
                                <label for="contact-phone">Contact Phone</label>
                                <input type="text" id="contact-phone" value="+1 (555) 123-4567">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="site-description">Site Description</label>
                            <textarea id="site-description" rows="3">Premium car rental service offering luxury, economy, and family vehicles for all your travel needs.</textarea>
                        </div>
                    </div>

                    <!-- Admin Account Tab -->
                    <div class="settings-section" id="admin-section">
                        <h3>Admin Account</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="admin-username">Username</label>
                                <input type="text" id="admin-username" value="admin">
                            </div>
                            <div class="form-group">
                                <label for="admin-email">Email</label>
                                <input type="email" id="admin-email" value="admin@carrent.example">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="current-password">Current Password</label>
                            <input type="password" id="current-password" placeholder="Enter current password to make changes">
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="new-password">New Password</label>
                                <input type="password" id="new-password" placeholder="Enter new password">
                            </div>
                            <div class="form-group">
                                <label for="confirm-password">Confirm New Password</label>
                                <input type="password" id="confirm-password" placeholder="Confirm new password">
                            </div>
                        </div>
                    </div>

                    <!-- Rental Settings Tab -->
                    <div class="settings-section" id="rental-section">
                        <h3>Reservation Settings</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="rental-time-slot">Rental Time Slot (hours)</label>
                                <select id="rental-time-slot">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="4" selected>4</option>
                                    <option value="6">6</option>
                                    <option value="12">12</option>
                                    <option value="24">24</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="advance-booking">Maximum Advance Booking (days)</label>
                                <input type="number" id="advance-booking" value="90">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="toggle-label">
                                <label class="toggle-switch">
                                    <input type="checkbox" checked>
                                    <span class="toggle-slider"></span>
                                </label>
                                <span>Require ID verification for bookings</span>
                            </label>
                        </div>

                        <div class="form-group">
                            <label class="toggle-label">
                                <label class="toggle-switch">
                                    <input type="checkbox" checked>
                                    <span class="toggle-slider"></span>
                                </label>
                                <span>Allow instant booking</span>
                            </label>
                        </div>

                        <div class="form-group">
                            <label class="toggle-label">
                                <label class="toggle-switch">
                                    <input type="checkbox">
                                    <span class="toggle-slider"></span>
                                </label>
                                <span>Require manual approval for premium vehicles</span>
                            </label>
                        </div>
                    </div>

                    <!-- Payment Tab -->
                    <div class="settings-section" id="payment-section">
                        <h3>Payment Settings</h3>
                        <div class="form-group">
                            <label for="currency">Default Currency</label>
                            <select id="currency">
                                <option value="USD" selected>USD ($)</option>
                                <option value="EUR">EUR (€)</option>
                                <option value="GBP">GBP (£)</option>
                                <option value="CAD">CAD ($)</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="deposit-percentage">Required Deposit (%)</label>
                            <input type="number" id="deposit-percentage" value="20" min="0" max="100">
                        </div>

                        <div class="form-group">
                            <label>Payment Methods</label>
                            <div class="form-group">
                                <label class="toggle-label">
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                    <span>Credit Card</span>
                                </label>
                            </div>
                            <div class="form-group">
                                <label class="toggle-label">
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                    <span>PayPal</span>
                                </label>
                            </div>
                            <div class="form-group">
                                <label class="toggle-label">
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                    <span>Bank Transfer</span>
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="tax-rate">Tax Rate (%)</label>
                            <input type="number" id="tax-rate" value="8.5" step="0.1" min="0">
                        </div>
                    </div>

                    <!-- Notifications Tab -->
                    <div class="settings-section" id="notifications-section">
                        <h3>Notification Settings</h3>
                        <div class="form-group">
                            <label class="toggle-label">
                                <label class="toggle-switch">
                                    <input type="checkbox" checked>
                                    <span class="toggle-slider"></span>
                                </label>
                                <span>Email notifications for new bookings</span>
                            </label>
                        </div>

                        <div class="form-group">
                            <label class="toggle-label">
                                <label class="toggle-switch">
                                    <input type="checkbox" checked>
                                    <span class="toggle-slider"></span>
                                </label>
                                <span>SMS notifications for urgent issues</span>
                            </label>
                        </div>

                        <div class="form-group">
                            <label class="toggle-label">
                                <label class="toggle-switch">
                                    <input type="checkbox" checked>
                                    <span class="toggle-slider"></span>
                                </label>
                                <span>Browser push notifications</span>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="notification-email">Notification Email</label>
                            <input type="email" id="notification-email" value="notifications@carrent.example">
                        </div>

                        <div class="form-group">
                            <label for="notification-phone">Notification Phone</label>
                            <input type="text" id="notification-phone" value="+1 (555) 987-6543">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Tab switching functionality
        document.addEventListener('DOMContentLoaded', function() {
            const tabs = document.querySelectorAll('.tab');

            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Remove active class from all tabs
                    tabs.forEach(t => t.classList.remove('active'));

                    // Add active class to clicked tab
                    this.classList.add('active');

                    // Hide all sections
                    const sections = document.querySelectorAll('.settings-section');
                    sections.forEach(section => section.classList.remove('active'));

                    // Show the corresponding section
                    const tabName = this.getAttribute('data-tab');
                    document.getElementById(tabName + '-section').classList.add('active');
                });
            });

            // Save button functionality
            document.querySelector('.save-button').addEventListener('click', function() {
                // Simulate saving data
                this.textContent = 'Saving...';

                setTimeout(() => {
                    this.textContent = 'Saved!';

                    setTimeout(() => {
                        this.textContent = 'Save Changes';
                    }, 2000);
                }, 1000);
            });
        });
    </script>
</body>
</html>