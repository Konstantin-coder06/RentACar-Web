@{
    Layout = "_Layout";
    ViewData["Title"] = "System Configuration";
}

<div class="container-fluid">
    <div class="row">
        <!-- Deletion Section -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Deletion Management</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="image-card" data-target="#carDeletion">
                                <img src="/images/delete-car.jpg" class="img-fluid rounded" alt="Delete Car">
                                <div class="image-overlay-text">Delete Car</div>
                            </div>
                            <div id="carDeletion" class="mt-3">
                                <button class="btn btn-danger w-100">Delete Car</button>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="image-card" data-target="#userDeletion">
                                <img src="/images/delete-user.jpg" class="img-fluid rounded" alt="Delete User">
                                <div class="image-overlay-text">Delete User</div>
                            </div>
                            <div id="userDeletion" class="mt-3">
                                <button class="btn btn-danger w-100">Delete User</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Currency Section -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Currency Settings</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Main Currency</label>
                        <select class="form-select">
                            <option>USD</option>
                            <option>EUR</option>
                            <option>GBP</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservation Settings -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Reservation Duration</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Minimum Duration (days)</label>
                                <input type="number" class="form-control" min="1" value="1">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Maximum Duration (days)</label>
                                <input type="number" class="form-control" min="1" value="30">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Auto Cancellation -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-calendar-times me-2"></i>Auto Cancellation</h5>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="autoCancelToggle">
                        <label class="form-check-label">Enable Auto Cancellation</label>
                    </div>
                    <div class="mt-3" id="cancelDaysContainer" style="display: none;">
                        <label>Cancellation Before (days)</label>
                        <input type="number" class="form-control" min="1" value="3">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Auto Logout -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-sign-out-alt me-2"></i>Auto Logout</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Inactivity Timeout (minutes)</label>
                                <input type="number" class="form-control" min="1" value="30">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .image-card {
        position: relative;
        cursor: pointer;
        transition: transform 0.3s;
    }

        .image-card:hover {
            transform: translateY(-5px);
        }

    .image-overlay-text {
        position: absolute;
        bottom: 15px;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        font-size: 1.2rem;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    .card-header {
        padding: 1.2rem;
        font-size: 1.1rem;
    }

    .form-switch .form-check-input {
        width: 3.5em;
        height: 1.8em;
    }
</style>

@section Scripts {
    <script>
        // Toggle cancellation days input
        document.getElementById('autoCancelToggle').addEventListener('change', function() {
            document.getElementById('cancelDaysContainer').style.display = this.checked ? 'block' : 'none';
        });

        // Image card click handler
        document.querySelectorAll('.image-card').forEach(card => {
            card.addEventListener('click', function() {
                const target = document.querySelector(this.dataset.target);
                target.classList.toggle('d-none');
            });
        });
    </script>
}