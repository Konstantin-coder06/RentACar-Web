        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        padding: 2rem;
        margin-top: 2rem;
    }

    h2 {
        color: #2c3e50;
        font-weight: 600;
        border-bottom: 3px solid #e65a5a;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

    legend {
        border-bottom: 3px solid #e65a5a;
    }

  
    .form-group {
        margin-bottom: 1.5rem;
    }

    label.control-label {
        font-weight: 500;
        color: #e65a5a;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 5px;
        border: 2px solid #ecf0f1;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #e65a5a;
            box-shadow: 0 0 8px rgba(52,152,219,0.2);
        }





    .row.mt-3 {
