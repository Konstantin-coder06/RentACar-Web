@{
    Layout = null;
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0" />
<link rel="stylesheet" href="~/css/adminIndex.css" asp-append-version="true" />
@model AnalyticsViewModel

<main>
    <h1>📊 Analytics</h1>

    <div class="date">
        <input type="date">
    </div>

    <div class="insights">



        <!-- start seling -->
        <div class="sales">

            <span class="material-symbols-sharp">trending_up</span>
            <div class="middle">

                <div class="left">
                    <h3>Total Sales</h3>
                    <h1>BGN @Model.TotalLast24Hours</h1>
                </div>
                <div class="progress">
                    <svg>
                        <circle r="30" cy="40" cx="40"></circle>
                    </svg>
                    <div class="number"><p>80%</p></div>
                </div>

            </div>
            <small>Last 24 Hours</small>
        </div>
        <!-- end seling -->
        <!-- start expenses -->

        <div class="expenses">

            <span class="material-symbols-sharp">local_mall</span>
            <div class="middle">

                <div class="left">
                    <h3>Total Sales</h3>
                    <h1>BGN @Model.TotalLastWeek</h1>
                </div>
                <div class="progress">
                    <svg>
                        <circle r="30" cy="40" cx="40"></circle>
                    </svg>
                    <div class="number"><p>80%</p></div>
                </div>

            </div>
            <small>Last Week</small>

        </div>
        <!-- end seling -->

        <div class="sales">

            <span class="material-symbols-sharp">trending_up</span>
            <div class="middle">

                <div class="left">
                    <h3>Total Sales</h3>
                    <h1>BGN @Model.TotalLastMonth</h1>
                </div>
                <div class="progress">
                    <svg>
                        <circle r="30" cy="40" cx="40"></circle>
                    </svg>
                    <div class="number"><p>80%</p></div>
                </div>

            </div>
            <small>Last Month</small>
        </div>

        <div class="sales">

            <span class="material-symbols-sharp">trending_up</span>
            <div class="middle">

                <div class="left">
                    <h3>Total Sales Before Last Day</h3>
                    <h1>BGN @Model.TotalPriceForLast24HoursBefore24Hours</h1>
                </div>
                <div class="progress">
                    <svg>
                        <circle r="30" cy="40" cx="40"></circle>
                    </svg>
                    <div class="number"><p>80%</p></div>
                </div>

            </div>
            <small>Last 24 Hours</small>
        </div>
        <!-- end seling -->
        <!-- start expenses -->
        <div class="expenses">

            <span class="material-symbols-sharp">local_mall</span>
            <div class="middle">

                <div class="left">
                    <h3>Total Sales Before Last Week</h3>
                    <h1>BGN @Model.TotalPriceForLastWeekBeforeWeek</h1>
                </div>
                <div class="progress">
                    <svg>
                        <circle r="30" cy="40" cx="40"></circle>
                    </svg>
                    <div class="number"><p>80%</p></div>
                </div>

            </div>
            <small>Last Week</small>
        </div>
        <!-- end seling -->
        <div class="sales">

            <span class="material-symbols-sharp">trending_up</span>
            <div class="middle">

                <div class="left">
                    <h3>Total Sales Before Last Month</h3>
                    <h1>BGN @Model.TotalPriceForLastMounthBeforeMonth</h1>
                </div>
                <div class="progress">
                    <svg>
                        <circle r="30" cy="40" cx="40"></circle>
                    </svg>
                    <div class="number"><p>80%</p></div>
                </div>

            </div>
            <small>Last Month</small>
        </div>
        <!-- start seling -->
        <div class="income">

            <span class="material-symbols-sharp">stacked_line_chart</span>
            <div class="middle">

                <div class="left">
                    <h3>Total Reservation</h3>
                    <h1>@Model.Count24Hours</h1>
                </div>
                <div class="progress">
                    <svg>
                        <circle r="30" cy="40" cx="40"></circle>
                    </svg>
                    <div class="number"><p>80%</p></div>
                </div>

            </div>
            <small>Last Day</small>
        </div>
        <div class="income">

            <span class="material-symbols-sharp">stacked_line_chart</span>
            <div class="middle">

                <div class="left">
                    <h3>Total Reservation</h3>
                    <h1>@Model.CountWeek</h1>
                </div>
                <div class="progress">
                    <svg>
                        <circle r="30" cy="40" cx="40"></circle>
                    </svg>
                    <div class="number"><p>80%</p></div>
                </div>

            </div>
            <small>Last Week</small>
        </div>
        <div class="income">

            <span class="material-symbols-sharp">stacked_line_chart</span>
            <div class="middle">

                <div class="left">
                    <h3>Total Reservation</h3>
                    <h1>@Model.CountMonth</h1>
                </div>
                <div class="progress">
                    <svg>
                        <circle r="30" cy="40" cx="40"></circle>
                    </svg>
                    <div class="number"><p>80%</p></div>
                </div>

            </div>
            <small>Last Mounth</small>
        </div>
        <!-- end seling -->

    </div>


    <div class="recent_order">
        <h2>🚗 Топ 10 най-продавани автомобили</h2>
        <table>
            <thead>
                <tr>
                    <td>Brand</td>
                    <td>Model</td>
                    <td>Count</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.Top10Cars)
                {
                    <tr>
                        <td>@x.Brand</td>
                        <td>@x.Model</td>
                        <td>@x.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>