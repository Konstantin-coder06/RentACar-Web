<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Feature - FAST DRIVE</title>
    <link rel="stylesheet" href="~/css/featureClassCar.css" />
    @model AddTypeOfCarViewModel
</head>
@{
    ViewData["HideNavigation"] = true;
    ViewData["HideFooter"] = true;
    @Html.Partial("_Navigation")
    
}
<body>
    <div class="hero">
        <div class="hero-content">

            <h1>Add New Type</h1>
            <p>Add a new type to your rental inventory.</p>

            <div class="form-container">
                <h2 class="form-title">Type Details</h2>
                <form asp-action="Add" asp-controller="Type" method="post">
                    
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Type Name</label>
                        <input type="text"  asp-for="Name" class="form-control" placeholder="Enter type name" required>
                        <span asp-validation-for="Name" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SeatCapacity" class="form-label">Seat Capacity</label>
                        <input type="number" asp-for="SeatCapacity" class="form-control" placeholder="Enter seat capacity" required>
                        <span asp-validation-for="SeatCapacity" class="error-message"></span>
                    </div>

                    <button type="submit" class="btn">Add Type</button>
                </form>
            </div>
           
        </div>
    </div>
</body>
</html>
