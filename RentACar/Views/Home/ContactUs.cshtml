<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - Fast Drive</title>
  
    <link rel="stylesheet" href="~/css/homeindex.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/contactUs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/alert.css" asp-append-version="true"/>
</head>
@{
    Layout = null;
    @Html.Partial("_Navigation")
}

  @model AddReportViewModel
<body>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    <div class="container">
        <section class="contact-hero">
            <div class="contact-hero-content">
                <h1>Contact Us</h1>
                <p>We're here to help with your car rental needs. Reach out to our team for assistance.</p>
            </div>
        </section>

        <section class="contact-content">
            <div class="contact-info">
                <div class="contact-card">
                    <div class="contact-icon">📱</div>
                    <h3>Phone</h3>
                    <p>+359 88 766 6986</p>
                    <p>Available 24/7 for customer support</p>
                </div>

                <div class="contact-card">
                    <div class="contact-icon">✉️</div>
                    <h3>Email</h3>
                    <p>info@fastdrive.ae</p>
                    <p>We'll respond within 2 hours</p>
                </div>

                <div class="contact-card">
                    <div class="contact-icon">📍</div>
                    <h3>Location</h3>
                    <p>Sheikh Zayed Road, Dubai, UAE</p>
                    <p>Open daily from 8:00 AM to 10:00 PM</p>
                </div>
            </div>

            <div class="contact-form-container">
                <h2>Send Us a Message</h2>
                <form asp-action="ContactUs" asp-controller="Home" method="post" class="contact-form">
                    

                    <div class="form-group">
                        <label asp-for="Title">Subject</label>
                        <select id="subject" asp-for="Title">
                            <option value="booking">Booking Inquiry</option>
                            <option value="support">Customer Support</option>
                            <option value="feedback">Feedback</option>
                            <option value="other">Other</option>
                        </select>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group full-width">
                        <label asp-for="Description">Description
                        </label>
                        <textarea id="message" asp-for="Description" rows="5" placeholder="Your Message" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-primary">Send Message</button>
                </form>
            </div>
        </section>

        

        <section class="faq-section">
            <h2>Frequently Asked Questions</h2>
            <div class="faq-container">
                <div class="faq-item">
                    <h3>How do I book a car?</h3>
                    <p>You can book a car through our website by selecting your desired dates and car model. Alternatively, you can contact our customer service team by phone or email.</p>
                </div>
                <div class="faq-item">
                    <h3>What documents do I need for rental?</h3>
                    <p>You'll need a valid driver's license, passport or Emirates ID, and a credit card for the security deposit.</p>
                </div>
                <div class="faq-item">
                    <h3>Do you offer airport pickup?</h3>
                    <p>Yes, we offer complimentary airport pickup and drop-off for rentals longer than 3 days.</p>
                </div>
            </div>
        </section>
    </div>

   <link rel="stylesheet" href="~/css/footer.css" />
   @Html.Partial("_Footer")
</body>
</html>
