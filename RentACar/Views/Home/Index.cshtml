<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rentals</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/css/homeindex.css" asp-append-version="true" />
</head>
@{
    Layout = null;
}
@model StartEndDateViewModel
<body>
    <header>
        <div class="container">
            <div class="header-content">
                <div class="left-nav">
                    <a href="#" class="logo">FAST DRIVE</a>
                    <nav class="main-nav">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <a asp-action="Index" asp-controller="Car">Cars</a>
                        <a asp-action="AboutUs" asp-controller="Home">About Us</a>
                        <a asp-action="ContactUs" asp-controller="Home">Contact</a>
                    </nav>
                </div>

                <nav class="account-nav">
                    <a asp-action="LogIn" asp-controller="Account">Log in</a>
                    <a asp-action="Register" asp-controller="Account">Register as User</a>
                    <a asp-action="RegisterCompany" asp-controller="Account">Register as a Company</a>
                </nav>
            </div>
        </div>
    </header>

    <div class="container">
        <form asp-action="Index" asp-controller="Home" method="post">
            <section class="hero">
                <div class="hero-content">
                    <h1>Premium Car Rentals in Dubai</h1>
                    <p>Experience luxury and comfort with our wide selection of daily and monthly rentals.<br>No deposit required for most bookings with 24/7 dedicated customer support.</p>

                    <div class="search-box">
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input type="text" id="location" placeholder="Location" value="Dubai" disabled>
                        </div>

                        <div class="form-group">
                            <label asp-for="StartDay">Pick-up Date</label>
                            <input asp-for="StartDay" type="date" id="startDate" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>

                        <div class="form-group">
                            <label asp-for="EndDay">Return Date</label>
                            <input asp-for="EndDay" type="date" id="endDate" value="@DateTime.Now.AddDays(3).ToString("yyyy-MM-dd")">
                            <p class="error-message" id="dateError">The start date must be earlier than the end date.</p>
                        </div>

                        <button type="submit" class="btn-primary">Find Your Car</button>
                    </div>
                </div>
            </section>
        </form>

        <section class="features">
            <div class="feature-card">
                <div class="feature-icon">✓</div>
                <h3>No Hidden Fees</h3>
                <p>Transparent pricing with no surprise charges at pickup. What you see is what you pay.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h3>Fast Booking</h3>
                <p>Simple 3-step booking process with instant confirmation and digital agreements.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">🛡️</div>
                <h3>Free Insurance</h3>
                <p>Basic insurance included with all rentals. Option to upgrade for additional coverage.</p>
            </div>
        </section>

        <section class="monthly-rentals">
            <h2>
                <span>Monthly rentals in Dubai</span>
                <span>from Fast Drive</span>
            </h2>
            <p>Enjoy special rates on long-term rentals with free maintenance and support. Perfect for residents and extended stays.</p>
            <button class="btn-primary">Explore Monthly Offers</button>
        </section>

        <section class="popular-cars">
            <div class="section-header">
                <h2>Our Most Popular Cars</h2>
                <p>Choose from our selection of premium vehicles for your Dubai adventure</p>
            </div>

            <div class="car-grid">
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1741344585/culi1_hnrra4.webp" alt="Premium SUV">
                    </div>
                    <div class="car-details">
                        <h3>Premium SUV</h3>
                        <div class="car-price">From AED 350/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5 Seats</span>
                            <span>AC</span>
                        </div>
                    </div>
                </div>

                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1741344691/mers_mnj3vp.webp" alt="Luxury Sedan">
                    </div>
                    <div class="car-details">
                        <h3>Luxury Sedan</h3>
                        <div class="car-price">From AED 450/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5 Seats</span>
                            <span>AC</span>
                        </div>
                    </div>
                </div>

                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1741344770/a3_gaeaq1.webp" alt="Economy Car">
                    </div>
                    <div class="car-details">
                        <h3>Economy Car</h3>
                        <div class="car-price">From AED 180/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5 Seats</span>
                            <span>AC</span>
                        </div>
                    </div>
                </div>
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1741592109/eb7df8de-d8b2881a-173e4dc5-c042692_tgxt2f.webp" alt="Economy Car">
                    </div>
                    <div class="car-details">
                        <h3>Electric Car</h3>
                        <div class="car-price">From AED 230/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5 Seats</span>
                            <span>AC</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <h3>FAST DRIVE</h3>
                    <p>Premium car rental services in Dubai with a wide selection of vehicles for your travel needs.</p>
                 
                </div>

                <div class="footer-column">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Car" asp-action="Index">Cars</a></li>
                      
                      
                        <li><a asp-controller="Home" asp-action="AboutUs">About us</a></li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h3>Contact Us</h3>
                    <ul>
                        <li>Dubai, UAE</li>
                        <li>+971 4 123 4567</li>
                        <li>info@fastdrive.ae</li>
                    </ul>
                </div>
            </div>

            <div class="copyright">
                <p>&copy; 2025 FAST DRIVE. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var startDateInput = document.getElementById("startDate");
            var endDateInput = document.getElementById("endDate");
            var searchButton = document.querySelector(".btn-primary");
            var errorMessage = document.getElementById("dateError");

            function validateDates() {
                var startDate = new Date(startDateInput.value);
                var endDate = new Date(endDateInput.value);

                if (startDate >= endDate) {
                    errorMessage.style.display = "block";
                    searchButton.disabled = true;
                    searchButton.style.opacity = "0.7";
                    searchButton.style.cursor = "not-allowed";
                } else {
                    errorMessage.style.display = "none";
                    searchButton.disabled = false;
                    searchButton.style.opacity = "1";
                    searchButton.style.cursor = "pointer";
                }
            }

            startDateInput.addEventListener("input", validateDates);
            endDateInput.addEventListener("input", validateDates);
        });
    </script>
</body>
</html>