<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rentals</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/css/homeindex.css" asp-append-version="true" />
</head>
@{
    Layout = null;
}

@model StartEndDateWithCarsCountViewModel
<body>
    <header>
        <div class="container">
            <div class="header-content">
                <div class="left-nav">
                    <a href="#" class="logo">FAST DRIVE</a>
                    <nav class="main-nav">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <a asp-action="Index" asp-controller="Car">Cars</a>
                        <a asp-action="AboutUs" asp-controller="Home">About Us</a>
                        <a asp-action="ContactUs" asp-controller="Home">Contact</a>
                    </nav>
                </div>

                <nav class="account-nav">
                    <a asp-action="LogIn" asp-controller="Account">Log in</a>
                    <a asp-action="Register" asp-controller="Account">Register as User</a>
                    <a asp-action="RegisterCompany" asp-controller="Account">Register as a Company</a>
                </nav>
            </div>
        </div>
    </header>

    <div class="container">
        <form asp-action="Index" asp-controller="Home" method="post">
            <section class="hero">
                <div class="hero-content">
                    <h1>Premium Car Rentals in Dubai</h1>
                    <p>Experience luxury and comfort with our wide selection of daily and monthly rentals.<br>No deposit required for most bookings with 24/7 dedicated customer support.</p>

                    <div class="search-box">
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input type="text" value="Dubai" disabled>
                        </div>

                        <div class="form-group">
                            <label asp-for="StartDay">Pick-up Date</label>
                            <input asp-for="StartDay" type="date" >
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div>
                                    <ul>
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <span class="text-danger">@error.ErrorMessage</span>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>

                        <div class="form-group">
                            <label asp-for="EndDay">Return Date</label>
                            <input asp-for="EndDay" type="date" >
                           
                      
                        </div>

                        <button type="submit" class="btn-primary">Find Your Car</button>
                    </div>
                </div>
            </section>
        </form>

        <section class="features">
            <div class="feature-card">
                <div class="feature-icon">✓</div>
                <h3>No Hidden Fees</h3>
                <p>Transparent pricing with no surprise charges at pickup. What you see is what you pay.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h3>Fast Booking</h3>
                <p>Simple 3-step booking process with instant confirmation and digital agreements.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">🛡️</div>
                <h3>Free Insurance</h3>
                <p>Basic insurance included with all rentals. Option to upgrade for additional coverage.</p>
            </div>
        </section>

        <section class="monthly-rentals">
            <h2>
                <span>Monthly rentals in Dubai</span>
                <span>from Fast Drive</span>
            </h2>
            <p>Enjoy special rates on long-term rentals with free maintenance and support. Perfect for residents and extended stays.</p>
            <button class="btn-primary">Explore Monthly Offers</button>
        </section>

        <section class="popular-cars">
            <div class="section-header">
                <h2>Our Most Popular Cars</h2>
                <p>Choose from our selection of premium vehicles for your Dubai adventure</p>
            </div>

            <div class="car-grid">
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1740770316/cars/Images/46cd213c-8185-44b4-9ae4-efd3a0f6105b.webp" alt="Standard">
                    </div>
                    <div class="car-details">
                        <h3>Standard Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceStandard/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5/7 Seats</span>
                            <span>@Model.StandardCount cars</span>
                        </div>
                    </div>
                </div>

                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1741344691/mers_mnj3vp.webp" alt="Luxury">
                    </div>
                    <div class="car-details">
                        <h3>Luxury Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceLuxury/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5 Seats</span>
                            <span>@Model.LuxuryCount cars</span>
                        </div>
                    </div>
                </div>

                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1740767518/cars/Images/acbba22d-a0ba-4eed-aa07-d390eec5da91.webp" alt="Sport Cars">
                    </div>
                    <div class="car-details">
                        <h3>Sport Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceSport/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5 Seats</span>
                            <span>@Model.SportCount cars</span>
                        </div>
                    </div>
                </div>
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1740736705/cars/Images/381852b3-c708-4004-8b8e-fd9800ff0a99.webp" alt="Business Cars">
                    </div>
                    <div class="car-details">
                        <h3>Business Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceBusiness/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5 Seats</span>
                            <span>@Model.BusinessCount cars</span>
                        </div>
                    </div>
                </div>
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1739624138/cybertruck-1_s3nz5x.webp" alt="Electric Cars">
                    </div>
                    <div class="car-details">
                        <h3>Electric Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceElectric/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5 Seats</span>
                            <span>@Model.ElectricCount cars</span>
                        </div>
                    </div>
                </div>
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1740769699/cars/Images/a92f534c-50d0-4d41-a778-9f152b67ffa1.webp" alt="Economy Cars">
                    </div>
                    <div class="car-details">
                        <h3>Economy Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceEconomy/day</div>
                        <div class="car-features">
                            <span>Automatic</span>
                            <span>5 Seats</span>
                            <span>@Model.EconomyCount</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <h3>FAST DRIVE</h3>
                    <p>Premium car rental services in Dubai with a wide selection of vehicles for your travel needs.</p>

                </div>

                <div class="footer-column">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Car" asp-action="Index">Cars</a></li>


                        <li><a asp-controller="Home" asp-action="AboutUs">About us</a></li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h3>Contact Us</h3>
                    <ul>
                        <li>Dubai, UAE</li>
                        <li>+971 4 123 4567</li>
                        <li>info@fastdrive.ae</li>
                    </ul>
                </div>
            </div>

            <div class="copyright">
                <p>&copy; 2025 FAST DRIVE. All rights reserved.</p>
            </div>
        </div>
    </footer>

</body>
</html>