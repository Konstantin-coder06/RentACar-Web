<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rentals</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/css/homeindex.css" asp-append-version="true" />
</head>
@{
    Layout = null;
    @Html.Partial("_Navigation")
    
}

@model StartEndDateWithCarsCountViewModel
<body>
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="container">
        <form asp-action="Index" asp-controller="Home" method="post">
            <section class="hero">
                <div class="hero-content">
                    <h1>Premium Car Rentals in Dubai</h1>
                    <p>Experience luxury and comfort with our wide selection of daily  rentals.<br>No deposit required for most bookings with 24/7 dedicated customer support.</p>

                    <div class="search-box">
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input type="text" value="Dubai" disabled>
                        </div>

                        <div class="form-group">
                            <label asp-for="StartDay">Pick-up Date</label>
                            <input asp-for="StartDay" type="date" >
                            <span asp-validation-for="StartDay" class="text-danger"/>
                        </div>

                        <div class="form-group">
                            <label asp-for="EndDay">Return Date</label>
                            <input asp-for="EndDay" type="date" >
                            <span asp-validation-for="EndDay" class="text-danger" />
                           
                      
                        </div>

                        <button type="submit" class="btn-primary">Find Your Car</button>
                    </div>
                </div>
            </section>
        </form>

        <section class="features">
            <div class="feature-card">
                <div class="feature-icon">✓</div>
                <h3>No Hidden Fees</h3>
                <p>Transparent pricing with no surprise charges at pickup. What you see is what you pay.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h3>Fast Booking</h3>
                <p>Simple 3-step booking process with instant confirmation and digital agreements.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">🛡️</div>
                <h3>Free Insurance</h3>
                <p>Basic insurance included with all rentals. Option to upgrade for additional coverage.</p>
            </div>
        </section>

        <section class="monthly-rentals">
            <h2>
                <span>Explore Dubai in Style</span>
                <span>with Fast Drive</span>
            </h2>
            <p>Plan the perfect Dubai experience with our premium vehicles. From desert safaris to coastal drives, our fleet enhances every journey.</p>
            <a asp-action="Index" asp-controller="Car" class="btn-primary">Discover Dubai</a>
        </section>

        <section class="popular-cars">
            <div class="section-header">
                <h2>Our Types Of Cars</h2>
                <p>Choose from our selection of premium vehicles for your Dubai adventure</p>
            </div>

            <div class="car-grid">
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1740770316/cars/Images/46cd213c-8185-44b4-9ae4-efd3a0f6105b.webp" alt="Standard">
                    </div>
                    <div class="car-details">
                        <h3>Standard Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceStandard/day</div>
                        <div class="car-features">
                            <span>@Model.StandardCount Cars</span>
                        </div>
                    </div>
                </div>

                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1741344691/mers_mnj3vp.webp" alt="Luxury">
                    </div>
                    <div class="car-details">
                        <h3>Luxury Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceLuxury/day</div>
                        <div class="car-features">
                            <span>@Model.LuxuryCount Cars</span>
                        </div>
                    </div>
                </div>

                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1740767518/cars/Images/acbba22d-a0ba-4eed-aa07-d390eec5da91.webp" alt="Sport Cars">
                    </div>
                    <div class="car-details">
                        <h3>Sport Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceSport/day</div>
                        <div class="car-features">
                            <span>@Model.SportCount Cars</span>
                        </div>
                    </div>
                </div>
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1740736705/cars/Images/381852b3-c708-4004-8b8e-fd9800ff0a99.webp" alt="Business Cars">
                    </div>
                    <div class="car-details">
                        <h3>Business Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceBusiness/day</div>
                        <div class="car-features">
                            <span>@Model.BusinessCount cars</span>
                        </div>
                    </div>
                </div>
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1739624138/cybertruck-1_s3nz5x.webp" alt="Electric Cars">
                    </div>
                    <div class="car-details">
                        <h3>Electric Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceElectric/day</div>
                        <div class="car-features">
                            <span>@Model.ElectricCount cars</span>
                        </div>
                    </div>
                </div>
                <div class="car-card">
                    <div class="car-image">
                        <img src="https://res.cloudinary.com/dhibmotzx/image/upload/v1740769699/cars/Images/a92f534c-50d0-4d41-a778-9f152b67ffa1.webp" alt="Economy Cars">
                    </div>
                    <div class="car-details">
                        <h3>Economy Cars</h3>
                        <div class="car-price">From BGN @Model.MinPriceEconomy/day</div>
                        <div class="car-features">
                            <span>@Model.EconomyCount Cars</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

  @{
        @Html.Partial("_Footer")
  }
    <script src="~/js/oldDateDisabled.js"></script>
</body>
</html>