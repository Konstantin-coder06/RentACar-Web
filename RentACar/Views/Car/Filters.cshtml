@model CarWithFilters
<form method="post" asp-action="Filters" asp-controller="Car" class="luxury-filter">
    <div class="filter-container">
        <h2 class="filter-title">Филтрирай Луксозните Автомобили</h2>
        <label class="filter-label">Цена на ден</label>
        <div class="price-inputs">
            <input type="number" name="MinPrice" placeholder="От цена" class="filter-input" />
            <input type="number" name="MaxPrice" placeholder="До цена" class="filter-input" />
        </div>

        <h4>Клас на колата:</h4>
        @foreach (var carClass in Model.Classes)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedClassIds" value="@carClass.Id"
                       class="form-check-input"
                @(Model.SelectedClassIds.Contains(carClass.Id) ? "checked" : "") />
                <label class="form-check-label">@carClass.Name</label>
            </div>
        }
        <div class="button-group">
            <button type="submit" class="luxury-button">Филтрирай</button>
            <a asp-controller="Car" asp-action="Index" class="luxury-button">Cancel</a>
        </div>
    </div>
</form>

<style>
    .luxury-filter {
        max-width: 500px;
        margin: auto;
        padding: 30px;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(230, 90, 90, 0.6);
        color: #e65a5a;
        font-family: 'Poppins', sans-serif;
    }

    .filter-title {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        color: #e65a5a;
        margin-bottom: 20px;
    }

    .filter-label, .filter-subtitle {
        font-size: 18px;
        font-weight: bold;
        color: #e65a5a;
    }

    .price-inputs {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .filter-input {
        width: 100%;
        padding: 10px;
        border: 2px solid #e65a5a;
        background: #fff;
        color: #e65a5a;
        border-radius: 5px;
        font-size: 16px;
    }

    .checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 20px;
    }

    .luxury-checkbox {
        font-size: 16px;
        padding: 10px;
        background: #fff;
        border-radius: 5px;
        display: flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
        border: 1px solid #e65a5a;
    }

        .luxury-checkbox input {
            transform: scale(1.2);
            accent-color: #e65a5a;
        }

    .button-group {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .luxury-button {
        padding: 12px 20px;
        font-size: 18px;
        font-weight: bold;
        background: #e65a5a;
        color: #fff;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: 0.3s;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

        .luxury-button:hover {
            background: #fff;
            color: #e65a5a;
            box-shadow: 0 0 10px #e65a5a;
        }
</style>
