@{
    Layout = null;
}
@model LoginViewModel
<link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<body>
    <div class="login-container">
        <form action="/" class="login-form">
            <h1>Log in</h1>
            <div class="form-group">
                <span><i class="ri-user-3-line"></i></span>
                <div class="input-wrapper">
                    <input type="text" asp-for="Email" placeholder=" " id="name" />
                    <label asp-for="Email">Email</label>
                </div>
            </div>
            <div class="form-group">
                <span><i class="ri-lock-2-line"></i></span>
                <div class="input-wrapper">
                    <input id="password" type="password" asp-for="Password" placeholder=" " />
                    <label asp-for="Password">Password</label>
                </div>
                <span id="toggle-password"><i class="ri-eye-off-line"></i></span>
            </div>
            <div class="form-actions">
                <div class="remember-me">
                    <input type="checkbox" asp-for="RememberMe" id="remember" />
                    <label asp-for="RememberMe">Remember me</label>
                </div>
                <a href="#" class="forgot-password">Forgot Password?</a>
            </div>
            <button class="submit-btn">Login</button>
            <div class="register">
                Don't have an account? <a asp-action="Register" asp-controller="Account">Register</a>
            </div>
        </form>
    </div>

    <script src="~/js/main.js" asp-append-version="true"></script>
</body>

