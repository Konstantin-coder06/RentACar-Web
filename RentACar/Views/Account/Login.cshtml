@model LoginViewModel
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<div class="page-container">
<div class="login-container">
    <h2>
        <svg class="car-icon" viewBox="0 0 24 24" fill="#e65a5a">
            <path d="M18.9 5.5C18.8 5.2 18.5 5 18.1 5H5.9c-.4 0-.7.2-.8.5L3 11v8c0 .5.5 1 1 1h1c.5 0 1-.5 1-1v-1h12v1c0 .5.5 1 1 1h1c.5 0 1-.5 1-1v-8l-2.1-5.5zM6.5 12c-.8 0-1.5-.7-1.5-1.5S5.7 9 6.5 9s1.5.7 1.5 1.5-.7 1.5-1.5 1.5zm11 0c-.8 0-1.5-.7-1.5-1.5s.7-1.5 1.5-1.5 1.5.7 1.5 1.5-.7 1.5-1.5 1.5zM5 10l1.5-4h11L19 10H5z"/>
        </svg>
        Car Rental Login
    </h2>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" placeholder="Enter your email" />
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" placeholder="Enter your password" />
        </div>

        <div class="remember-me">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe">Remember me</label>
        </div>
            <div class="forgot-password">
                <input type="checkbox" id="forgotPasswordCheck" />
                <label for="forgotPasswordCheck">Forgot Password?</label>
            </div>

            <div id="resetPasswordField" style="display: none;">
                <div class="form-group">
                    <label asp-for="NewPassword">New Password</label>
                    <input asp-for="NewPassword" type="password" id="newPassword" name="newPassword" placeholder="Enter new password" />
                </div>
            </div>

            <button type="submit">Continue to Dashboard</button>
        </form>
    </div>
</div>

<script>
    document.getElementById("forgotPasswordCheck").addEventListener("change", function () {
        var resetField = document.getElementById("resetPasswordField");
        resetField.style.display = this.checked ? "block" : "none";
    });
</script>