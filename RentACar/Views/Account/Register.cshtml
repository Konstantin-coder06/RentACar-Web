@{
    Layout = null;
}
@model RegisterViewModel
<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
<link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet" />
<script src="~/js/main.js"></script>
<body>
<div class="login-container">
    
    <form asp-action="Register" method="post" class="login-form">
            <h1>Register As User</h1>
            <div class="form-group">
              
                <span><i class="ri-user-3-line"></i></span>
                <div class="input-wrapper">
                    <input type="text" asp-for="Name" placeholder=" " id="name" />
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <span><i class="ri-calendar-line"></i></span>
                <div class="input-wrapper">
                    <input type="date" asp-for="BirthDay"  lang="en" id="birthDay"
                           min="@DateTime.Now.AddYears(-100).ToString("yyyy-MM-dd")"
                           max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" />
                    <label asp-for="BirthDay">Birth Day</label>
                    <span asp-validation-for="BirthDay" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <span><i class="ri-user-3-line"></i></span>
                <div class="input-wrapper">
                    <input type="text" asp-for="Email" placeholder=" " id="name" />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <span><i class="ri-lock-2-line"></i></span>
                <div class="input-wrapper">
                    <input id="password" type="password" asp-for="Password" placeholder=" " />
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <span id="toggle-password"><i class="ri-eye-off-line"></i></span>
            </div>
            <div class="form-group">
                <span><i class="ri-lock-2-line"></i></span>
                <div class="input-wrapper">
                    <input id="password" type="password" asp-for="ConfirmPassword" placeholder=" " />
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <span id="toggle-password"><i class="ri-eye-off-line"></i></span>
            </div>
            <button class="submit-btn">Register</button>
            <div class="register">
                Already have an account? <a asp-action="Login" asp-controller="Account">Log in</a>
            </div>
    </form>
</div>

</body>