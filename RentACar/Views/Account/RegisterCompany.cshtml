@{
}
@model RegisterCompanyViewModel
<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />

<div class="page-container">
    <div class="register-container">
        <h2>
            <svg class="car-icon" viewBox="0 0 24 24" fill="#e65a5a">
                <path d="M18.9 5.5C18.8 5.2 18.5 5 18.1 5H5.9c-.4 0-.7.2-.8.5L3 11v8c0 .5.5 1 1 1h1c.5 0 1-.5 1-1v-1h12v1c0 .5.5 1 1 1h1c.5 0 1-.5 1-1v-8l-2.1-5.5zM6.5 12c-.8 0-1.5-.7-1.5-1.5S5.7 9 6.5 9s1.5.7 1.5 1.5-.7 1.5-1.5 1.5zm11 0c-.8 0-1.5-.7-1.5-1.5s.7-1.5 1.5-1.5 1.5.7 1.5 1.5-.7 1.5-1.5 1.5zM5 10l1.5-4h11L19 10H5z" />
            </svg> Register
        </h2>
        <form asp-action="RegisterCompany" method="post">
            <div>
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" required />
            </div>
            <div>
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" required />
            </div>
            <div>
                <label asp-for="CompanyName">Company name</label>
                <input asp-for="CompanyName"  required />
            </div>
            <div>
                <label asp-for="Description">Discription</label>
                <input asp-for="Description" required />
            </div>
            <div>
                <label asp-for="City">City</label>
                <input asp-for="City" required />
            </div>
            <div>
                <label asp-for="Country">Country</label>
                <input asp-for="Country" required />
            </div>
            <div>
                <label asp-for="Address">Address</label>
                <input asp-for="Address" required />
            </div>

            <button type="submit">Register</button>
        </form>
    </div>
</div>